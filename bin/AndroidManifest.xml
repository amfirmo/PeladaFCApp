<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.mackenzie.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.mackenzie.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.mackenzie.activity.CadastrarJogadorActivity"
            android:label="@string/app_name"
            android:parentActivityName="br.com.mackenzie.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.mackenzie.activity.MainActivity" />
        </activity>
        <activity
            android:name="br.com.mackenzie.activity.SelecionarJogadorActivity"
            android:label="@string/app_name"
            android:parentActivityName="br.com.mackenzie.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.mackenzie.activity.MainActivity" />
        </activity>
    </application>

</manifest>